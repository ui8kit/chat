{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@ui8kit/chat": ["../../packages/@ui8kit/chat/src"],
      "@ui8kit/chat/*": ["../../packages/@ui8kit/chat/src/*"]
    }

  },
  "include": ["src"]
}


